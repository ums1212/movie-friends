<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MovieFriends" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/friends_black</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.MovieFriends</item>
    </style>
</resources>